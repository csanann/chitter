<html>
<head></head>
<body>
    <h1>Welcome to the Chitter Society!</h1>
    <% @peeps_list.reverse_each do |peep| %>
        <p><%= @users.find(peeps.user_id) %> @<%= @users.find(peeps.user_id).username %> - <%= peep.timestamp %></p>
        <p><a href="/peeps/<%=peep.id%>"><%= peep.message %></a></p>
        <br />
    <% end %>
    <% if @user.nil? %>
        <p><a href="/signup"> <button type="button">Sign up to Chitter</button></a><a href="/login"> <button type="button">Log in to Chitter</button></a></p>
    <% else %>
        <p><a href="/peeps/new"><button type="button">Add a new peep</button></a><a href="/logout"> <button type="button">Log out</button></a></p>
    <% end %>
</body>
</html>
